@using ATP2.BDAID.Framework.Constant
@model ATP2.BDAID.Entities.Reg_User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}
<br />
@if (Model.UserInfo.UserTypeID == (int)EnumCollection.UserTypeEnum.RegisteredUser && Model.DOB==DateTime.MinValue)
{
    <h4 style="color:red">For using this site properly You need to fill up the required information and Editing progress should be 100% </h4>
    <h3>Editing Progress </h3>
    <div class="row">
        <div class="col-md-9">
            <div id="myProgress">
                <div id="myBar">50%</div>
            </div>
        </div>
        <div class="col-md-3">
            <a class="btn btn-info form-control" href="@Url.Action("EditProfile","RegisteredHost")">Update Profile</a>
        </div>
    </div>
}
<br />
<div class="card">

    <h1><span class="glyphicon glyphicon-user" aria-hidden="true"> &nbsp; </span>  @Model.UserInfo.Name </h1>
    @if (Model.DOB != DateTime.MinValue)
    {
        <p class="title"><span class="glyphicon glyphicon-briefcase" aria-hidden="true"> &nbsp; </span> @Model.Profession</p>
        <p><span class="glyphicon glyphicon-earphone" aria-hidden="true"> &nbsp; </span> @Model.Contact</p>
    }


</div>
<br />
<table class="table table-striped table-hover">
    <tr>
        <td><span class="glyphicon glyphicon-tasks" aria-hidden="true"> &nbsp; </span> ID </td>
        <td>@Model.UserInfo.ID</td>
    </tr>
    <tr>
        <td><span class="glyphicon glyphicon-tasks" aria-hidden="true"> &nbsp; </span> Name </td>
        <td>@Model.UserInfo.Name</td>
    </tr>
    <tr>
        <td><span class="glyphicon glyphicon-envelope" aria-hidden="true"> &nbsp; </span> Email </td>
        <td>@Model.UserInfo.Email</td>
    </tr>
    @if (Model.DOB != DateTime.MinValue)
    {
        <tr>
            <td><span class="glyphicon glyphicon-envelope" aria-hidden="true"> &nbsp; </span> Gender </td>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <td><span class="glyphicon glyphicon-envelope" aria-hidden="true"> &nbsp; </span> DOB </td>
            <td>@Model.DOB.ToShortDateString()</td>
        </tr>
    }
    <tr>
        <td><span class="glyphicon glyphicon-tasks" aria-hidden="true"> &nbsp; </span> User Type </td>
        <td>@((EnumCollection.UserTypeEnum)Model.UserInfo.UserTypeID)</td>
        <td></td>
    </tr>

</table>




<style>
    .card {
        box-shadow: 0 -8px -16px -16px #7A7676;
        max-width: 800px;
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .title {
        color: grey;
        font-size: 18px;
    }

    button {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

    .bt {
        border: none;
        outline: 0;
        display: inline-block;
        padding: 8px;
        color: white;
        background-color: #615F5F;
        text-align: center;
        cursor: pointer;
        width: 25%;
        font-size: 18px;
    }

    a {
        text-decoration: none;
        font-size: 22px;
        color: black;
    }

        button:hover, a:hover {
            opacity: 0.7;
        }

    #t2 {
        -moz-tab-size: 16; /* Firefox */
        -o-tab-size: 16; /* Opera 10.6-12.1 */
        tab-size: 16;
    }

    #myProgress {
        width: 100%;
        background-color: #ddd;
    }

    #myBar {
        width: 50%;
        height: 30px;
        background-color: #4CAF50;
        text-align: center;
        line-height: 30px;
        color: white;
    }
</style>
