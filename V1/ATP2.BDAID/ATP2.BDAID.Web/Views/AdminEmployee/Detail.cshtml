@model ATP2.BDAID.Model.Admin.EmployeeModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}


@using (Html.BeginForm("Detail"))
{
    if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Oh snap!</strong> @ViewBag.Error
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.ID)
                @Html.TextBoxFor(m => m.Employee.ID, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(m => m.Employee.ID)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.UserInfo.Name)
                @Html.TextBoxFor(m => m.Employee.UserInfo.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employee.UserInfo.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.UserInfo.Email)
                @Html.TextBoxFor(m => m.Employee.UserInfo.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employee.UserInfo.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Salary)
                @Html.TextBoxFor(m => m.Employee.Salary, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employee.Salary)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.UserInfo.StatusID)
                @Html.DropDownListFor(m => m.Employee.UserInfo.StatusID, new SelectList(Model.Statuses, "ID", "Name"), "Select Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employee.UserInfo.StatusID)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.DOB)
                @Html.TextBoxFor(m => m.Employee.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @Value = Model.Employee.DOB.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(m => m.Employee.DOB)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Employee.Contact)
                @Html.TextBoxFor(m => m.Employee.Contact, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Employee.Contact)
            </div>
            <div class="form-group">
                <label class="radio-inline">
                    @Html.RadioButtonFor(m => m.Employee.Gender, "Male") &nbsp;Male
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(m => m.Employee.Gender, "Female") &nbsp;Female
                </label>
                
                @Html.ValidationMessageFor(m => m.Employee.Gender)
                @Html.HiddenFor(m=>m.Employee.UserInfo.Password)
            </div>
            <button type="submit" class="btn btn-default" value="Save">Save</button> <br />
        </div>
    </div>
}

